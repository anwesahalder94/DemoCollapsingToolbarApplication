<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@+id/first_frag">

    <fragment
        android:id="@+id/first_frag"
        android:name="com.example.demoapiapplication.FirstFragment"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_first_to_second_fragment"
            app:destination="@+id/second_fragment" />
    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.example.demoapiapplication.SecondFragment"
        tools:layout="@layout/fragment_second"/>
</navigation>